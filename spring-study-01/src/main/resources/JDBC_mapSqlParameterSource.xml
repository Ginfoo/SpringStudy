<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
">
    <context:property-placeholder location="jdbc.properties"></context:property-placeholder>
    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="${jdbc.driverClass}"/>
        <property name="username" value="${jdbc.userName}"/>
        <property name="password" value="${jdbc.userPass}"/>
        <property name="url" value="${jdbc.url}"/>
    </bean>

    <bean id="namedParameterJdbcTemplate" class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
        <constructor-arg ref="dataSource"></constructor-arg>
    </bean>

    <bean id="studentDao" class="party.infoo.spring.DAO.jdbc.dao.StudentDaoImpl_NamedParameterJdbcTemplate">
        <property name="jdbcTemplate" ref="namedParameterJdbcTemplate"></property>
    </bean>
    <bean id="studentService" class="party.infoo.spring.DAO.jdbc.service.StudentServiceImpl">
        <property name="studentDao" ref="studentDao"></property>
    </bean>

</beans>